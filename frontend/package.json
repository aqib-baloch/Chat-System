{
  "name": "chat-system-frontend",
  "version": "1.0.0",
  "description": "Frontend for Chat System",
  "main": "src/main.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/assets/css/main.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/assets/css/main.css --minify",
    "build": "npm run build-js && npm run build:css",
    "build-js": "mkdir -p public/assets/js && rsync -a --delete --include='*/' --include='*.js' --exclude='*' src/ public/assets/js/",
    "watch-js": "node scripts/watch-js.mjs"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
